<li class="dropdown-item @Class" @onclick='Clicked'>
    @ChildContent
</li>

@code {
    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Active { get; set; } = "active";

    [Parameter]
    public EventCallback Clicked { get; set; }

}
